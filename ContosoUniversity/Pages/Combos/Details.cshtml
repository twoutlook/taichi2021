@page
@model ContosoUniversity.Pages.Combos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Combo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Seq)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Seq)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Grp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Grp)
        </dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>SEQ</th>
                    <th>口訣</th>
                </tr>
                @foreach (var item in Model.Combo.Moves)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seq)
                        </td>
                        <td>
                        
                            <a href="/Moves/Edit?id= @Html.DisplayFor(modelItem => item.ID)"> @Html.DisplayFor(modelItem => item.Text)</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Combo.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
